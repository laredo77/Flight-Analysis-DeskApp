<UserControl x:Class="WpfApp1.Controls.ProgressBars"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Viewbox>
            <Grid>
                <ProgressBar  x:Name="progressBar1" HorizontalAlignment="Left" Height="20" Margin="0.461,0,0,0" 
                              VerticalAlignment="Top" Width="150" Value="{Binding Path=VM_Pitch,  Mode=OneWay}" Minimum="-20" Maximum="20"/>
                <ProgressBar  x:Name="progressBar2" HorizontalAlignment="Left" Height="20" Margin="0.461,50,0,0" 
                              VerticalAlignment="Top" Width="150" Value="{Binding Path=VM_Roll, Mode=OneWay}"  Minimum="-40" Maximum="40"/>
                <ProgressBar x:Name="progressBar3" HorizontalAlignment="Left" Height="20" Margin="0.461,100,0,0" 
                             VerticalAlignment="Top" Width="150" Value="{Binding Path=VM_Yaw, Mode=OneWay}"  Minimum="-100" Maximum="100"/>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
