<UserControl x:Class="WpfApp1.Controls.MediaPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Controls"
             mc:Ignorable="d" Height="115" Width="664.5">

    <Grid Height="115" VerticalAlignment="Top" HorizontalAlignment="Left" Width="664">
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="-1,66,0,0" VerticalAlignment="Top" Height="49" Width="664"/>
        <Button x:Name="doublePreviousButton" HorizontalAlignment="Left" Margin="42,15,0,0" VerticalAlignment="Top" Width="40" Height="46">
            <Button.Background>
                <ImageBrush ImageSource="/WpfApp1;component/Pictures\doublePrevious.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="previousButton" HorizontalAlignment="Left" Margin="100,15,0,0" VerticalAlignment="Top" Width="42" Height="46">
            <Button.Background>
                <ImageBrush ImageSource="/WpfApp1;component/Pictures\previous.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="playButton" HorizontalAlignment="Left" Margin="156,15,0,0" VerticalAlignment="Top" Width="40" Height="46" IsEnabled="False" Click="playButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="/WpfApp1;component/Pictures\play.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="pauseButton" HorizontalAlignment="Left" Margin="210,15,0,0" VerticalAlignment="Top" Width="42" Height="46" >
            <Button.Background>
                <ImageBrush ImageSource="/WpfApp1;component/Pictures\pause.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="stopButton" HorizontalAlignment="Left" Margin="266,15,0,0" VerticalAlignment="Top" Width="40" Height="46">
            <Button.Background>
                <ImageBrush ImageSource="/WpfApp1;component/Pictures\stop.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="nextButton" HorizontalAlignment="Left" Margin="320,15,0,0" VerticalAlignment="Top" Width="42" Height="46" >
            <Button.Background>
                <ImageBrush ImageSource="/WpfApp1;component/Pictures\next.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="doubleNextButton" HorizontalAlignment="Left" Margin="376,15,0,0" VerticalAlignment="Top" Width="40" Height="46" RenderTransformOrigin="2.227,0.436" >
            <Button.Background>
                <ImageBrush ImageSource="/WpfApp1;component/Pictures\doubleNext.jpg"/>
            </Button.Background>
        </Button>
        <Label x:Name="playSpeedLabel" Content="Play speed" HorizontalAlignment="Left" Margin="438,27,0,0" VerticalAlignment="Top" Height="26" Width="73"/>
        <TextBox x:Name="playSpeedTextBox" HorizontalAlignment="Left" Height="46" Margin="516,15,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="56"/>
        <Label x:Name="timeLabel" Content="Label" HorizontalAlignment="Left" Margin="592,27,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.24,0.106" Height="26" Width="46"/>
    </Grid>
</UserControl>
