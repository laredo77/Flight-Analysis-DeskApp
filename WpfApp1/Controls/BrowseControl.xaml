<UserControl x:Class="WpfApp1.Controls.BrowseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Controls">
    <Viewbox>
        <Viewbox Height="38" Width="546">
            <Grid Height="43" Width="580">
                <Grid.RowDefinitions>
                    <RowDefinition Height="18*"/>
                    <RowDefinition Height="25*"/>
                </Grid.RowDefinitions>


                <Button x:Name="openFlightGear" HorizontalContentAlignment="Center" Content="Open FlightGear" HorizontalAlignment="Left" Margin="140,0,0,0" VerticalAlignment="Top" Width="131" Height="45" Click="openFlightGear_Click" RenderTransformOrigin="-0.046,0.163" Grid.RowSpan="2" FontSize="16" FontWeight="Bold" >
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF3F3F3" Offset="0"/>
                            <GradientStop Color="#FFADDEF5" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="openCSVButton" Content="Open CSV" HorizontalAlignment="Left" VerticalAlignment="Top" Width="131" Height="45" Click="openCSVButton_Click"  Margin="280,0,0,0" Grid.RowSpan="2" FontSize="16" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF3F3F3" Offset="0"/>
                            <GradientStop Color="#FFADDEF5" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="runFlightGear" Content="Run FlightGear" HorizontalAlignment="Left" VerticalAlignment="Top" Width="131" Height="45" Click="runFlightGear_Click" RenderTransformOrigin="-0.046,0.163" IsEnabled="False" Margin="0,0,0,0" Grid.RowSpan="2" FontSize="16" FontWeight="Bold" >
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF3F3F3" Offset="0"/>
                            <GradientStop Color="#FFADDEF5" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="loadDllButton" Content="Load Dll" HorizontalAlignment="Left" Margin="420,0,0,0" Width="131" Height="45"  Grid.RowSpan="2" FontSize="16" FontWeight="Bold" Click="loadDllButton_Click" >
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF3F3F3" Offset="0"/>
                            <GradientStop Color="#FFADDEF5" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

            </Grid>
        </Viewbox>
    </Viewbox>
</UserControl>
