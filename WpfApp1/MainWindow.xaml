<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:Controls="clr-namespace:WpfApp1.controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FFB4B4B4">
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="94,378,0,0" VerticalAlignment="Top" Height="45" Width="649"/>
        <Button x:Name="doublePreviousButton" HorizontalAlignment="Left" Margin="140,320,0,0" VerticalAlignment="Top" Width="45" Height="45" Click="doublePreviousButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="Pictures\doublePrevious.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="previousButton" HorizontalAlignment="Left" Margin="172,514,0,0" VerticalAlignment="Top" Width="45" Height="45" Click="previousButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="Pictures\previous.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="playButton" HorizontalAlignment="Left" Margin="232,514,0,0" VerticalAlignment="Top" Width="45" Height="45" Click="playButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="Pictures\play.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="pauseButton" HorizontalAlignment="Left" Margin="292,514,0,0" VerticalAlignment="Top" Width="45" Height="45" Click="pauseButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="Pictures\pause.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="stopButton" HorizontalAlignment="Left" Margin="352,514,0,0" VerticalAlignment="Top" Width="45" Height="45" Click="stopButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="Pictures\stop.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="nextButton" HorizontalAlignment="Left" Margin="412,514,0,0" VerticalAlignment="Top" Width="45" Height="45" Click="nextButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="Pictures\next.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="doubleNextButton" HorizontalAlignment="Left" Margin="472,514,0,0" VerticalAlignment="Top" Width="45" Height="45" RenderTransformOrigin="2.227,0.436" Click="doubleNextButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="Pictures\doubleNext.jpg"/>
            </Button.Background>
        </Button>
        <Label x:Name="playSpeedLabel" Content="Play speed" HorizontalAlignment="Left" Margin="541,524,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="playSpeedTextBox" HorizontalAlignment="Left" Height="45" Margin="626,514,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="60"/>
        <Label x:Name="timeLabel" Content="Label" HorizontalAlignment="Left" Margin="712,524,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.24,0.106"/>

        <Button x:Name="openFlightGear" Content="Open FlightGear" HorizontalAlignment="Left" Margin="192,604,0,0" VerticalAlignment="Top" Width="100" Height="45" Click="openFlightGear_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FF6D6D6D" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="openXMLButton" Content="Open XML" HorizontalAlignment="Left" Margin="312,604,0,0" VerticalAlignment="Top" Width="100" Height="45" Click="openXMLButton_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FF6D6D6D" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="openCSVButton" Content="Open CSV" HorizontalAlignment="Left" Margin="432,604,0,0" VerticalAlignment="Top" Width="100" Height="45" Click="openCSVButton_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FF6D6D6D" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Slider HorizontalAlignment="Left" Margin="592,167,0,0" VerticalAlignment="Top" Height="67" Width="162" ValueChanged="Slider_ValueChanged"/>
        <Slider HorizontalAlignment="Left" Margin="502,75,0,0" VerticalAlignment="Top" Height="26" Width="155" RenderTransformOrigin="0.5,0.5">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar Value ="{Binding VM_Speedometer, Mode=OneWay}" HorizontalAlignment="Left" Margin="682,247,0,0" Height="33" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <Controls:SpeedClock Margin="194,79,435.667,187"/>
        <!--test part1-->
        <Ellipse x:Name="Cricle" HorizontalAlignment="Left" Height="150" VerticalAlignment="Top" Width="150" RenderTransformOrigin="0.5,0.5" Canvas.Top="-50" Canvas.Left="-50" Margin="629,17,0,0">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF272121"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="KnobBase" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.5,0.5" Canvas.Top="-75" Canvas.Left="-75" Margin="679,67,0,0">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF896868" />
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <TranslateTransform />
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <!--test part2-->
        <Rectangle x:Name="RudderRect" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="150" RenderTransformOrigin="0.5,0.5" Canvas.Top="-50" Canvas.Left="-50" Margin="629,181,0,0" StrokeThickness="1" Stroke="Black">
            <Rectangle.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF608CDA"/>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="Rudder" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="20" RenderTransformOrigin="0.5,0.5" Canvas.Top="41" Canvas.Left="-74" Margin="694,181,0,0">
            <Rectangle.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="Black" />
                </RadialGradientBrush>
            </Rectangle.Fill>
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <TranslateTransform />
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <!--test part3-->
        <Rectangle x:Name="ThrottleRect" HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="150" RenderTransformOrigin="0.51,-0.071" Margin="538,95,0,0" StrokeThickness="1" Stroke="Black">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform />
                </TransformGroup>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF797F89"/>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="Throttle" HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="20" RenderTransformOrigin="0.5,0.5" Margin="592,145,0,0">
            <Rectangle.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="Black" />
                </RadialGradientBrush>
            </Rectangle.Fill>
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <TranslateTransform />
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
            </Slider.RenderTransform>
        </Slider>
        <Image Source="/Pictures/pic1.jpg" HorizontalAlignment="Left" Height="113" Margin="617,28,0,0" VerticalAlignment="Top" Width="117"/>
        <Controls:SpeedClock Margin="387,193,261.667,134"/>
        <Controls:HightClock Margin="543,193,105.667,134"/>
    </Grid>
</Window>
